<% content_for :title, t(".title") %>

<layout-columns class="block w-full max-w-md mx-auto bg-base-100 rounded-box shadow p-6">
  <layout-column class="flex flex-col gap-4"> 
    <h1 class="text-3xl"><%= t(".title") %></h1>
    <%= form_with(
      model: @user,
      url: sign_up_path,
      class: "flex flex-col gap-4"
    ) do |form| %>
      <div class="flex flex-col">
        <%= form.label :name, class: "label" %>
        <%= form.text_field :name, class: "input" %>
      </div>
      <div class="flex flex-col">
        <%= form.label :email, class: "label" %>
        <%= form.text_field :email, class: "input" %>
      </div>
      <div class="flex flex-col">
        <%= form.label :password, class: "label" %>
        <%= form.text_field :password, class: "input" %>
      </div>
      <div class="flex flex-col">
        <%= form.label :password_confirmation, class: "label" %>
        <%= form.text_field :password_confirmation, class: "input" %>
      </div>

      <div>
        <%= form.submit t(".sign_up"), class: "btn btn-primary my-3" %>
      </div>

    <% end %>
  </layout-column>
</layout-columns>
